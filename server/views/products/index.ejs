<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Prodcut details</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/products/add" class="btn btn-primary"
        ><i class="fa fa-plus"></i> Add a product</a
      >
      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Product id</th>
              <th class="text-center">Product name</th>
              <th class="text-center">Descriptionr</th>
              <th class="text-center">Price</th>
              <th class="text-center">Edit</th>
              <th class="text-center">Check</th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < products.length; count++) { %>
            <tr>
              <td><%= products[count].Productid %></td>
              <td class="text-center"><%= products[count].Productname %></td>
              <td class="text-center"><%= products[count].Description %></td>
              <td class="text-center"><%= products[count].Price %></td>

              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <!-- ------------------------ -->
                <a href="/products/<%= products[count]._id%>" class="btn btn-primary">Edit</a>
              </td>
              <td class="text-center">
                <input type="radio" name="checkboxes" id="<%= products[count]._id%>">
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
  
    <!-- ------------------------ -->
    <!-- ADD the DELETE BUTTON HERE -->
    <!-- ------------------------ -->
    <div onclick="deleteProduct()" class="btn btn-warning btn-sm" id="delete_btn">
      <i class="fas fa-trash"></i> Delete</div>
      <script>
        
        function deleteProduct(){
          let id = document.querySelector("input[type='radio']:checked").id;
          
          location.href = '/products/delete/' + id;
          
        }
      </script>
  </main>
  

      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
